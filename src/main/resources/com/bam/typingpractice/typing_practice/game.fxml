<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="pane_basis" prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #0a1931;"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bam.typingpractice.typing_practice.GameController">
    <Circle fill="WHITE" layoutX="195.0" layoutY="94.0" radius="39.0" stroke="#ffc947" strokeType="INSIDE"
            strokeWidth="3.0"/>
    <Text fx:id="seconds" layoutX="174.0" layoutY="92.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER"
          wrappingWidth="42.64990234375">
        <font>
            <Font name="Calibri" size="31.0"/>
        </font>
    </Text>
    <Text layoutX="174.0" layoutY="112.0" strokeType="OUTSIDE" strokeWidth="0.0" text="seconds">
        <font>
            <Font name="Calibri" size="13.0"/>
        </font>
    </Text>
    <Text fill="WHITE" layoutX="272.0" layoutY="112.0" strokeType="OUTSIDE" strokeWidth="0.0" text="words/min">
        <font>
            <Font name="Calibri" size="13.0"/>
        </font>
    </Text>
    <Text fill="WHITE" layoutX="362.0" layoutY="112.0" strokeType="OUTSIDE" strokeWidth="0.0" text="\% accuracy">
        <font>
            <Font name="Calibri" size="13.0"/>
        </font>
    </Text>
    <Text fx:id="wordsPerMin" fill="WHITE" layoutX="279.0" layoutY="93.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text="0" textAlignment="CENTER" wrappingWidth="42.64990234375">
        <font>
            <Font name="Calibri" size="31.0"/>
        </font>
    </Text>
    <Text fx:id="accuracy" fill="WHITE" layoutX="367.0" layoutY="93.0" strokeType="OUTSIDE" strokeWidth="0.0" text="0"
          textAlignment="CENTER" wrappingWidth="49.0">
        <font>
            <Font name="Calibri" size="31.0"/>
        </font>
    </Text>
    <TextField fx:id="userWord" alignment="CENTER" layoutX="201.0" layoutY="222.0" onKeyPressed="#startGame"
               prefHeight="42.0" prefWidth="214.0">
        <font>
            <Font size="20.0"/>
        </font>
    </TextField>
    <Text fx:id="programWord" fill="#ffc947" layoutX="216.0" layoutY="192.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text="word" textAlignment="CENTER" wrappingWidth="184.74749755859375">
        <font>
            <Font size="21.0"/>
        </font>
    </Text>
    <Text fx:id="secondProgramWord" fill="#ffc9455c" layoutX="362.0" layoutY="191.0" strokeType="OUTSIDE"
          strokeWidth="0.0" text="word" textAlignment="CENTER" wrappingWidth="184.74749755859375">
        <font>
            <Font size="21.0"/>
        </font>
    </Text>
    <ImageView fx:id="correct" fitHeight="51.0" fitWidth="49.0" layoutX="284.0" layoutY="302.0" opacity="0.0"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@check.png"/>
    </ImageView>
    <ImageView fx:id="wrong" fitHeight="51.0" fitWidth="49.0" layoutX="284.0" layoutY="302.0" opacity="0.0"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@wrong.png"/>
    </ImageView>
    <Button fx:id="playAgain" alignment="BOTTOM_LEFT" layoutX="240.0" layoutY="305.0" mnemonicParsing="false"
            onAction="#toMainMenu" prefHeight="43.0" prefWidth="137.0"
            style="-fx-background-color: #185adb; -fx-cursor: hand;" text="Play again" textFill="#ffc947">
        <font>
            <Font name="Calibri" size="23.0"/>
        </font>
    </Button>
    <Button fx:id="btn_stop" alignment="CENTER" layoutX="240.0" layoutY="350.0" mnemonicParsing="false"
            onAction="#toMainMenu" prefHeight="43.0" prefWidth="137.0"
            style="-fx-background-color: #185adb; -fx-cursor: hand;" text="STOP" textAlignment="CENTER"
            textFill="#ffc947">
        <font>
          <Font name="Calibri" size="23.0"/>
        </font>
    </Button>
</AnchorPane>
