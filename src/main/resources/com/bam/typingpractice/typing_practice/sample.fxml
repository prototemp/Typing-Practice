<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bam.typingpractice.typing_practice.Controller">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <Pane prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #0a1931;">
        <Label fx:id="displayUsername" alignment="CENTER" layoutX="167.0" prefHeight="57.0" prefWidth="267.0"
               text="Welcome, user!" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Calibri" size="35.0"/>
            </font>
        </Label>
        <Label fx:id="timeLabel" layoutX="162.0" layoutY="57.0" prefHeight="35.0" prefWidth="276.0"
               style="-fx-alignment: center;" text="Label" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Calibri" size="30.0"/>
            </font>
        </Label>
        <Button alignment="BOTTOM_LEFT" layoutX="245.0" layoutY="107.0" mnemonicParsing="false"
                onAction="#playGame" prefHeight="35.0" prefWidth="110.0"
                style="-fx-background-color: #185adb; -fx-cursor: hand;" text="Play" textFill="#ffc947">
            <font>
                <Font name="Calibri" size="23.0"/>
            </font>
        </Button>
        <ChoiceBox fx:id="pilihWaktu" layoutX="80.0" layoutY="238.0" prefWidth="150.0"/>
